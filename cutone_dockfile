FROM alpine:3.9

# 换源
RUN echo -e "http://mirrors.aliyun.com/alpine/v3.9/main\nhttp://mirrors.aliyun.com/alpine/v3.9/community" > /etc/apk/repositories

COPY . /code

RUN apk add --no-cache python3 python3-dev git openssh openssl bash curl gcc  \
    build-base linux-headers pcre-dev nginx git

RUN pip3 install -i https://pypi.douban.com/simple --upgrade pip \
    && pip install -i https://pypi.douban.com/simple -r /code/requirements.txt